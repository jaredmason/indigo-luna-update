<style>
#shopify-product-reviews .spr-container {
	border-left: none;
	border-right: none;
	padding-top: var(--spacing);
	padding-bottom: var(--spacing);
}
#shopify-product-reviews .spr-header-title {
	display: none;
}
#shopify-product-reviews .spr-reviews {
	display: grid;
	grid-template-columns: repeat(2, minmax(0, 1fr));
	grid-gap: 3rem;
}
#shopify-product-reviews .spr-summary-actions-togglereviews {
	text-transform: uppercase;
	margin-left: 0.5rem;
}
#shopify-product-reviews .spr-summary-actions-newreview, 
#shopify-product-reviews .spr-button.spr-button-primary {
	display: block;
	text-transform: uppercase;
	font-size: 1.2rem;
	text-align: center;
	border-radius: 2px;
	border: solid 1px var(--color-primary-text);
	padding: 0.2rem 1.5rem;
	text-decoration: none !important;
}
#shopify-product-reviews a.spr-summary-actions-newreview:hover,
#shopify-product-reviews .spr-button.spr-button-primary:hover {
	background-color: var(--color-primary-text);
	color: var(--color-primary-text--overlay);
}
#shopify-product-reviews .spr-review:first-child {
	margin-top: 0;
}
#shopify-product-reviews .spr-reviews .spr-review {
	border-top: none;
	display: flex;
	flex-direction: column;
}
#shopify-product-reviews .spr-review-content {
	flex-grow: 1;
	margin: 0 0 0.5rem 0;
}
#shopify-product-reviews .spr-starratings.spr-review-header-starratings {
	font-size: 10px;
}
#shopify-product-reviews .spr-review-header-title {
	color: var(--color-primary-accent);
}
#shopify-product-reviews .spr-review-header-byline {
	font-style: normal;
}
#shopify-product-reviews .spr-pagination {
	grid-column: 2 / 4;
	border-top: none;
	margin: 0 auto;
}
#shopify-product-reviews .spr-pagination-next {
	position: unset;
	text-transform: uppercase;
	text-decoration: underline;
	margin-left: 1rem;
}
#shopify-product-reviews .spr-pagination-prev {
	margin-right: 1rem;
	position: unset;
	text-transform: uppercase;
	text-decoration: underline;
}
#shopify-product-reviews .spr-form-title {
	text-transform: uppercase;
	margin-bottom: 1rem;
}
@media (min-width: 1024px) {
	#shopify-product-reviews .spr-header, .spr-content {
		width: 66.666667%;
		margin: 0 auto;
	}
	#shopify-product-reviews .spr-reviews {
		grid-template-columns: repeat(4, minmax(0, 1fr));
	}
}
@media (max-width: 1023px) {
	#shopify-product-reviews .spr-container {
		padding: 2rem 0;
	}
	#shopify-product-reviews .spr-header {
		padding: 0 1rem;
	}
	#shopify-product-reviews .spr-summary-actions-newreview,
	#shopify-product-reviews .spr-reviews {
		margin-top: 1rem;
	}
	#shopify-product-reviews .spr-summary {
		text-align: left;
	}
	#shopify-product-reviews .spr-reviews {
		display: flex;
		flex-flow: wrap;
		grid-gap: 0;
	}
	#shopify-product-reviews .spr-reviews .spr-review {
		flex-basis: 50%;
		padding: 1.5rem 1rem;
	}
}
</style>

<div id="shopify-product-reviews" class="lg:px-8 pt-theme" data-id="{{product.id}}">{{ product.metafields.spr.reviews }}</div>

{% schema %}
{
  "name": "Product reviews",
  "settings": [
	{
	  "type": "checkbox",
	  "id": "show_reviews",
	  "label": "Show Product reviews",
	  "info": "Show Product reviews section",
	  "default": true
	},
	{
	  "type": "select",
	  "id": "products_per_row_desktop",
	  "label": "Products per row - desktop",
	  "default": "4",
	  "options": [
		{
		  "value": "2",
		  "label": "2"
		},
		{
		  "value": "3",
		  "label": "3"
		},
		{
		  "value": "4",
		  "label": "4"
		}
	  ]
	},
	{
	  "type": "select",
	  "id": "products_per_row_mobile",
	  "label": "Products per row - mobile",
	  "default": "2",
	  "options": [
		{
		  "value": "1",
		  "label": "1"
		},
		{
		  "value": "2",
		  "label": "2"
		}
	  ]
	},
	{
	  "type": "select",
	  "id": "color_scheme",
	  "label": "Color scheme",
	  "options": [
		  { "value": "primary", "label": "Primary"},
		  { "value": "secondary", "label": "Secondary"},
		  { "value": "tertiary", "label": "Tertiary"}
	  ],
	  "default":   "primary"
	}
  ]
}
{% endschema %}
