/*/////////////////////////////////////////////////////////////////////////////*/
/* !Grid System */
/*////////////////////////////////////////////////////////////////////////////*/

.wk-row {
  display: flex;
  flex-flow: row wrap;
  justify-content: flex-start;
  align-items: baseline;
  box-sizing: border-box;
}

.wk-span2 { width: 16.6666%; }
.wk-span3 { width: 25%; }
.wk-span4 { width: 33.3333%; }
.wk-span6 { width: 50%; }
.wk-span12 { width: 100%; }

@media (max-width: 720px) {
  .wk-span2 { width: 33.3333%; }
  .wk-span3 { width: 50%; }
  .wk-span4 { width: 50%; }
  .wk-item-column { width: 50% !important; }
}

@media (max-width: 480px) {
  .wk-span2 { width: 100%; }
  .wk-span3 { width: 100%; }
  .wk-span4 { width: 100%; }
  .wk-span6 { width: 100%; }
  .wk-item-column { width: 100% !important; }
}


/*/////////////////////////////////////////////////////////////////////////////*/
/* !Wishlist Page */
/*////////////////////////////////////////////////////////////////////////////*/

h1#wk-page-title {
  display: block;
  text-align: center;
  margin: 0 0 1rem 0;
  padding: 0;
  border: none;
}

.wk-wishlist-empty-note {
  text-align: center;
  margin-bottom: 35px;
}

p.wk-login-note {
  text-align: center;
  background: #fafafa;
  padding: 0.5rem;
  margin: 0 1px 1rem;

  a {
    text-decoration: underline;
  }
}

.wishlist-collection {
  margin: 0 1px;
}

.wk-item {
  position: relative;
  text-align: center;

  margin: 0 1px 2rem 1px;

  .wk-variant-link {
    display: block;
    float: none;
    text-decoration: none;
    color: $wk-page-title-color;
    border: none;
  }

  .wk-price {
    color: $wk-page-price-color;
    border: none;
  }

  .wk-product-options {
    border-bottom: none;

    .selector-wrapper {
      //display: block !important;
    }

    label {
      display: none;
      text-align: center;
    }

    select {
      box-sizing: border-box;
      display: block;
      width: 100% !important;
      border-radius: 0;
      background-color: transparent;
    }
  }

  .wk-purchase-section {
    margin-top: 0.5rem;
  }
}

.wk-add-item-form {
  position: absolute;
  bottom: 47px;
  margin: 0 auto;
  left: 0;
  right: 0;

  background: $wk-variant-form-background;
  padding: 2px;
  opacity: 0;

  -webkit-transition: opacity 250ms;
  transition: opacity 250ms;

  input.wk-add-to-cart {
    box-sizing: border-box;
    cursor: pointer;
    border: none;
    margin: 0;
    padding: 0.25rem 0.5rem;
    color: $wk-add-to-cart-color;
    background: $wk-add-to-cart-background;
    color: $wk-add-to-cart-color;
    width: 100%;
    min-width: 0;
    height: auto;
    min-height: 0;
    line-height: 1;
    font-size: 1.15rem;
    border-radius: 0;
    text-transform: uppercase;
    -webkit-appearance: none;
    appearance: none;

    &:hover {
      background: $wk-add-to-cart-background-hover;
      color: $wk-add-to-cart-color-hover;
    }
  }
}

.wk-item:hover {
  .wk-add-item-form {
    opacity: 1;
  }
}

.wk-select {
  padding: 0 2rem;
  margin-top: 0.5rem;
}

/*/////////////////////////////////////////////////////////////////////////////*/
/* !Share Buttons */
/*////////////////////////////////////////////////////////////////////////////*/

h3#wk-share-head {
  font-size: 1rem;
  text-align: center;
  margin: 5px 0 7px 0;
  padding: 0;
  text-transform: uppercase;
  border: none;
}

ul#wk-share-list {
  list-style: none;
  width: 100%;
  margin: 0 0 2rem 0;
  padding: 0;
  text-align: center;

  li {
    display: inline-block;
    margin: 0;
    padding: 0 0.25rem;
  }
}

#wk-share-link-text {
  margin-top: -30px;
  margin-bottom: 40px;
  color: $link-sharing-color;
  padding: 3px 10px;
  display: none;
  text-align: center;
  font-size: .8em;
  font-style: italic;

  .wk-text {
    display: inline-block;
    padding: 0;
    margin: 0;
  }

  .wk-clipboard {
    margin-left: 10px;
    background: $copy-link-background;
    border: none;
    color: $copy-link-color;
    padding: 4px 7px;
    border-radius: 0px;
    min-height: auto;
    height: auto;

    &:focus {
      outline: none;
    }
  }

  &.wk-visible {
    display: block;
  }
}

.wk-button-share {
  cursor: pointer;

  &:hover {
    color: #fff;
  }
}

.resp-sharing-button__link,
.resp-sharing-button__icon {
  display: inline-block;
}

.resp-sharing-button__link {
  font-size: 12px;
  text-decoration: none;
  color: #fff;
  margin: 0;
  min-height: 0;
  line-height: 1;
}

.resp-sharing-button {
  transition: 25ms ease-out;
  padding: 5px 8px 7px;
}

.resp-sharing-button__icon svg {
  width: 15px;
  height: 15px;
}

.resp-sharing-button span {
  padding-left: 0.4em;
  display:none;
}

/* Non solid icons get a stroke */
.resp-sharing-button__icon {
  stroke: #fff;
  fill: none;

  svg {
    position: relative;
    top: 2px;
  }
}

/* Solid icons get a fill */
.resp-sharing-button__icon--solid {
  fill: #fff;
  stroke: none;
}

.resp-sharing-button--facebook {
  background-color: rgba(177,151,78,0.6);
}

.resp-sharing-button--pinterest {
  background-color: rgba(177,151,78,0.6);
}

.resp-sharing-button--twitter {
  background-color: rgba(177,151,78,0.6);
}

.resp-sharing-button--link {
  background-color: rgba(177,151,78,0.6);
}

.resp-sharing-button--email {
  background-color: rgba(177,151,78,0.6);
}

.resp-sharing-button--whatsapp {
  background-color: rgba(177,151,78,0.6);
}

#wk-share-whatsapp {
  display: none !important;
}

.resp-sharing-button--facebook:hover {
  background-color: #3B1974E;
}

.resp-sharing-button--pinterest:hover {
  background-color: #B1974E;
}

.resp-sharing-button--twitter:hover {
  background-color: #B1974E;
}

.resp-sharing-button--link:hover {
  background-color: #B1974E;
}

.resp-sharing-button--email:hover {
  background-color: #B1974E;
}

.resp-sharing-button--whatsapp:hover {
  background-color: #B1974E;
}

.wk-touch {
  .resp-sharing-button--facebook,
  .resp-sharing-button--pinterest,
  .resp-sharing-button--twitter,
  .resp-sharing-button--email,
  .resp-sharing-button--link,
  .resp-sharing-button--whatsapp {
    &:hover {
      background-color: #B1974E;
    }
  }

  button.wk-button-collection,
  button.wk-button-product,
  button.wk-button-wishlist-page {
    &.wk-add-product,
    &.wk-remove-product,
    &.wk-remove-item {
      opacity: 1;
    }
  }

  .wk-add-item-form {
    opacity: 1;
  }
}

button.wk-button-wishlist-page.wk-remove-item {
  background: #F2EDE8;
  border-radius: 9999px;
}

button.wk-button-wishlist-page.wk-remove-item .wk-icon {
  width: 14px;
  height: 14px;
}

